generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url = "file:./dev.db"
}


model User {
  id String @id
  email String
  password String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt @default(now())
  profile Profile?
  account Account?
}

model Profile {
  id String @id
  username String
  avatar_url String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt @default(now())
  user_id String
  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model Account {
  id String @id
  user_id String
  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)
  transactions Transaction[]
  income Income[]
  expense Expense[]
}

model Transaction {
  id String @id
  account_id String
  amount Float
  type String
  account Account @relation(fields: [account_id], references: [id])
  created_at DateTime @default(now())
}

model Income {
  id String @id
  amount Float
  created_at DateTime @default(now())
  account_id String
  account Account @relation(fields: [account_id], references: [id])
}

model Expense {
  id String @id
  amount Float
  created_at DateTime @default(now())
  account_id String
  account Account @relation(fields: [account_id], references: [id])
}